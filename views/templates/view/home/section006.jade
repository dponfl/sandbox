.row#car_booking
  .container-fluid
    .section6
      .col-md-offset-3.col-md-6.text-vertical-center-3
        .wsp-home-header06 {{'HOME_TITLE_06' | translate}}
        .wsp-home-subheader06.text-vertical-center-5 {{'HOME_SUBTITLE_06' | translate}}

      .container.text-vertical-center-7
        form(novalidate='novalidate',
        data-ng-submit='')
          .form-group.clearfix
            label(for='clientName', translate='LBL_FIELD_NAME').col-sm-4.control-label.text-right.wsp-label
            .col-sm-4
              input(type="text",
              data-ng-pattern="/^[a-zA-Zа-яА-Яα-ωΑ-Ω\\s\\-\\.\\']+$/",
              data-ng-required-err-type="{{'AV_REQ' | translate}}",
              data-ng-pattern-err-type="{{'FIELD_NAME_ERR' | translate}}",
              required,
              data-ng-model='spc.formData.name').form-control#clientName

          .form-group.clearfix
            label(for='clientEmail', translate='LBL_FIELD_EMAIL').col-sm-4.control-label.text-right.wsp-label
            .col-sm-4
              input(type="text",
              data-ng-pattern='/^([0-9a-zA-Z\\.]([\\.\\-\\+\\w])*@([0-9a-zA-Z][-\\w]*[0-9a-zA-Z]*\\.)+[a-zA-Z]{2,9})$/',
              data-ng-required-err-type="{{'AV_REQ' | translate}}",
              data-ng-pattern-err-type="{{'FIELD_EMAIL_ERR' | translate}}",
              required,
              data-ng-model='spc.formData.email').form-control#clientEmail

          .form-group.clearfix
            label(for='clientPhone', translate='LBL_FIELD_PHONE').col-sm-4.control-label.text-right.wsp-label
            .col-sm-4
              input(type="text",
              data-ng-model='hc.formData.phone').form-control#clientPhone

          .form-group.clearfix
            label(for='dateStart', translate='LBL_FIELD_DATE_START').col-sm-4.control-label.text-right.wsp-label
            .col-sm-2
              input(type="text",
              required,
              placeholder="{{'DATEPICKER_DATE' | translate}}",
              data-ng-required-err-type="{{'AV_REQ' | translate}}",
              data-ng-model='spc.formData.period_start',
              data-max-date='{{spc.formData.pariod_end}}',
              data-min-date='{{spc.startDate}}',
              bs-datepicker).form-control#dateStart
            .col-sm-1
              input(type="text",
              required,
              placeholder="{{'DATEPICKER_TIME' | translate}}",
              data-ng-required-err-type="{{'AV_REQ' | translate}}",
              data-ng-model='spc.formData.period_start_time',
              data-time-format="HH:mm",
              bs-timepicker).form-control#timeStart

          .form-group.clearfix
            label(for='dateEnd', translate='LBL_FIELD_DATE_END').col-sm-4.control-label.text-right.wsp-label
            .col-sm-2
              input(type="text",
              required,
              placeholder="{{'DATEPICKER_DATE' | translate}}",
              data-ng-required-err-type="{{'AV_REQ' | translate}}",
              data-ng-model='spc.formData.pariod_end',
              data-min-date='{{(spc.formData.period_start ? spc.formData.period_start : spc.startDate)}}',
              bs-datepicker).form-control#dateEnd
            .col-sm-1
              input(type="text",
              required,
              placeholder="{{'DATEPICKER_TIME' | translate}}",
              data-ng-required-err-type="{{'AV_REQ' | translate}}",
              data-ng-model='spc.formData.period_end_time',
              data-time-format="HH:mm",
              bs-timepicker).form-control#timeEnd

          .form-group.clearfix
            label(for='objectType', translate='LBL_OBJ').col-sm-4.control-label.text-right.wsp-label
            .col-sm-6
              select(name='objectType',
              data-ng-options='option.val for option in $ctrl.objList track by option.key',
              data-ng-model='$ctrl.formData.obj').form-control#objectType

          .form-group.clearfix
            label(for='clientInfo', translate='LBL_FIELD_ADDINFO').col-sm-4.control-label.text-right.wsp-label
            .col-sm-6
              textarea(type="text",
              data-ng-model='spc.formData.additionalInfo').form-control#clientInfo


          .wsp-section06-btn
            button.btn.wsp-btn.wsp-btn-md.btn-danger
              | {{ 'BTN_BOOK_PERFORM' | translate }}
            button.btn.wsp-btn.wsp-btn-md.btn-default
              | {{ 'BTN_CLR' | translate }}


