div(data-ng-controller="CarCtrl as ctrl").row
  .container-fluid
    .parallax-section.section4
      .on-parallax.section4
        .col-md-offset-2.col-md-8.text-vertical-center-3
          .wsp-home-header04 {{'HOME_TITLE_04' | translate}}
          div(role="alert",
          data-ng-repeat="highlight in ctrl.highlights").alert.alert-warning.wsp-alert-block
            .wsp-alert04-header {{ highlight.header }}
            .wsp-alert04-content {{ highlight.content }}
          .wsp-home-subheader04.text-vertical-center-5 {{'HOME_SUBTITLE_04' | translate}}
        .container.text-vertical-center-7
          .row
            div(data-ng-repeat='group in ctrl.panelGroups').row
              .col-md-4(data-ng-repeat="car in group")
                .thumbnail.wsp-thumbnail-border04

                  a(href='{{car.img.href}}',
                  data-lightbox='{{car.img.dataLightbox}}',
                  data-title='{{car.img.dataTitle}}')
                    img(data-ng-src='{{car.img.src}}').wsp-thumb-img04

                  .wsp-thumbnail-title04 {{car.group}}
                  .wsp-thumbnail-text04 {{car.title}}

                  .wsp-thumbnail-details-highlight04 {{'LBL_PRICE_FROM' | translate}} {{car.time_group_5_l}} &euro;

                  form.form-horizontal.wsp-thumbnail-details04
                    .form-group.wsp-form-group(data-ng-repeat="elem in car.content[0]")
                      label.col-md-5.col-xs-5.control-label.wsp-text-right.wsp-label {{elem.label}}
                      .col-md-7.col-xs-7
                        p.form-control-static.wsp-text-left.wsp-text {{elem.text}}

                  div(data-ng-show="car.showDetails").nga-default.nga-stagger.nga-squash-left.wsp-thumbnail-details04
                    form.form-horizontal.wsp-thumbnail-details04
                      .form-group.wsp-form-group(data-ng-repeat="elem in car.content[1]")
                        label.col-md-5.col-xs-5.control-label.wsp-text-right.wsp-label {{elem.label}}
                        .col-md-7.col-xs-7
                          p.form-control-static.wsp-text-left.wsp-text {{elem.text}}
                    .table-responsive
                      table.table.wsp-tbl-top-head
                        thead
                          tr
                            th {{ 'HOME_HIGH_SEASON' | translate }}  01/05-31/10
                      table.table.wsp-tbl-body
                        thead
                          tr
                            th 14+ {{ 'HOME_5D' | translate }}
                            th 7-14 {{ 'HOME_5D' | translate }}
                            th 3-6 {{ 'HOME_5D' | translate }}
                            th 2 {{ 'HOME_2D' | translate }}
                            th 1 {{ 'HOME_1D' | translate }}
                        tbody
                          tr
                            td {{ car.time_group_5_h }}&nbsp;&euro;
                            td {{ car.time_group_4_h }}&nbsp;&euro;
                            td {{ car.time_group_3_h }}&nbsp;&euro;
                            td {{ car.time_group_2_h }}&nbsp;&euro;
                            td {{ car.time_group_1_h }}&nbsp;&euro;
                      table.table.wsp-tbl-top-head
                        thead
                          tr
                            th {{ 'HOME_LOW_SEASON' | translate }}  01/11-30/04
                      table.table.wsp-tbl-body
                        thead
                          tr
                            th 14+ {{ 'HOME_5D' | translate }}
                            th 7-14 {{ 'HOME_5D' | translate }}
                            th 3-6 {{ 'HOME_5D' | translate }}
                            th 2 {{ 'HOME_2D' | translate }}
                            th 1 {{ 'HOME_1D' | translate }}
                        tbody
                          tr
                            td {{ car.time_group_5_l }}&nbsp;&euro;
                            td {{ car.time_group_4_l }}&nbsp;&euro;
                            td {{ car.time_group_3_l }}&nbsp;&euro;
                            td {{ car.time_group_2_l }}&nbsp;&euro;
                            td {{ car.time_group_1_l }}&nbsp;&euro;
                  .wsp-section04-btn
                    a(href="#car_booking")
                      button.btn.wsp-btn.wsp-btn-book.wsp-btn-md.btn-danger
                        | {{ 'BTN_BOOK_CAR' | translate }}
                    div(data-ng-show="!car.showDetails")
                      button(data-ng-click="ctrl.activateDetails(car.ind)").btn.wsp-btn.wsp-btn-sm.btn-default
                        | {{ 'BTN_CAR_SHOW_DETAILS' | translate }}
                    div(data-ng-show="car.showDetails")
                      button(data-ng-click="ctrl.deactivateDetails(car.ind)").btn.wsp-btn.wsp-btn-sm.btn-default
                        | {{ 'BTN_CAR_HIDE_DETAILS' | translate }}


