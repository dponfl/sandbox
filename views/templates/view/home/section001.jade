div(data-ng-controller="GeneralCtrl as gen").row
  .container-fluid#home
    .parallax-section.section1
      span(data-picture,
      data-alt="Camel Car Hire - Section 01",
      mr-px-parallax,
      mr-px-max-px="gen.parallaxSpeed").mr-px-img
        span(data-src="../../images/block01.jpg",
        mr-px-size="1920,1308")

        <!--[if (lt IE 9) & (!IEMobile)]>
        <span data-src="../../images/block01.jpg" mr-px-size="1920,1308"></span>
        <![endif]-->

        noscript
          img(src="../../images/block01.jpg", alt="Camel Car Hire - Section 01")

      .on-parallax.section1
        .col-md-offset-3.col-md-6.text-vertical-center-5
          .wsp-home-center
            img(src="../../images/camel-logo-355x355.png", alt="Camel Car Hire logo")
          .wsp-home-header {{'HOME_TITLE_01' | translate}}
          .wsp-section01-btn.col-md-12
            a(href="#car_booking")
              button(type="button").btn.wsp-btn.wsp-btn-book.wsp-btn-md {{'BTN_BOOK' | translate}}
            a(href="#know_more")
              button(type="button").btn.wsp-btn.wsp-btn-details.wsp-btn-md {{'BTN_KNOWMORE' | translate}}

